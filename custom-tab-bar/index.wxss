.tab-bar {
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx;
  background-color: #fff;
  border-top: 1px solid #f0f0f0;
  border-radius: 20rpx 200rxp 0 0;
  height: 128rpx;
}
.tab-bar-border {
  border: 1px solid red;
}
.tab-bar-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 10rpx 0;
}

.tab-bar-icon {
  width: 44rpx;
  height: 44rpx;
}

.tab-bar-text {
  font-size: 20rpx;
  margin-top: 6rpx;
  font-family: "CustomFont", sans-serif; /* 这里是自定义字体 */
}
