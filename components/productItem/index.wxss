.content-item {
  display: flex;
  align-items: center;
  margin-bottom: 20px;
  background-color: #EDE7F6;
  border-radius: 16rpx;
  height: 140rpx;
}

.title {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.image-url {
  width: 60px;
  height:60px;
  margin-right: 10px;
  border-radius: 20rpx;
}

.image-url image {
  width: 100%;
  height: 100%;
}

.desc {
  padding-right: 40rpx;
  flex: 1;
}

.goods-name {
  font-size: 26rpx;
  color: #888;
}

.button {
  width: 30px;
  height: 30px;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1px solid #ccc;
  cursor: pointer;
  font-size: 20px;
}
.btn-wrapper {
  position: fixed;
  bottom: 30rpx;
  right: 0;
}

.operate-count {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-right: 36rpx;
  height: 100%;
}

.num-btn {
  color: #fff;
  background-color: #9575CD;
  border-radius: 10rpx;
  width: 24rpx;
  height:50rpx;
  padding: 10rpx 20rpx;
}
.dele-btn-slot {
  color: #fff;
  background-color: #EF5350;
  border-radius: 0 10rpx 10rpx 0;
  width: 100rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}